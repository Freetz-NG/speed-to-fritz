#!/bin/bash
#########################################################################
# Print out setting                                                     #
#########################################################################
echo "********************************************************************************"
echo -e "Settings:"
echo "********************************************************************************"
echo "Script revision              : ${SVN_REVISION}"
echo "Firmware for update via GUI  : ${NEWIMG}"
[ "$ADD_USBROOT" = "y" ] && echo "Firmware for use with USBROOT: ${NEWIMG}.rootfs.tar"
echo "Firmware for update via FTP  : kernel.image"
echo "Output directory             : ${NEWDIR}"
[ "$SPMOD" = "500" ] && echo "for T-Sinus model            : W500V"
[ "$SPMOD" = "501" ] && echo "for Speedport model          : W501V"
[ "$SPMOD" = "503" ] && echo "for Speedport model          : W503V"
[ "$SPMOD" = "701" ] && echo "for Speedport model          : W701V"
[ "$SPMOD" = "721" ] && echo "for Speedport model          : W721V"
[ "$SPMOD" = "900" ] && echo "for Speedport model          : W900V"
[ "$SPMOD" = "920" ] && echo "for Speedport model          : W920V"
[ "$SPMOD" = "707" ] && echo "for Speedport model          : W701V"
[ "$SPMOD" = "907" ] && echo "for Speedport model          : W900V"
echo "Branding set to              : $OEM"
[ "$TR069_TCOM" = "y" ] && echo "Autoconfig via tr069         : enabled"
[ "$ATA_ONLY" = "y" ] && echo "Box is set to                : ATA-ONLY"
[ "$HOSTNAME" ] && echo "Hostname changed to          : $HOSTNAME"
 [ "$NEWNAME" ] && echo "Product name changed to      : '${NEWNAME}'"
echo  "AVM source is                : $SORCE_PRODUKT"
echo  "AVM source firmware mod is   : $FBMOD"
echo "--------------------------------------------------------------------------------"
