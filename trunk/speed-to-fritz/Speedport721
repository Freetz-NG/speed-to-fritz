#not in use -->
#if there is still no option within the menus 7570 rc.vdsl.sh is not used!
#sed -i -e "s/dsl_pipe sarcs 0 0 0 1 32 1/dsl_pipe sarcs 0 0 0 $VPI $VCI 1/" "${SRC}/etc/init.d/rc.vdsl.sh" 
