. /etc/init.d/rc.vdsl.sh' "${SRC}/etc/init.d/rc.S"
[ ${USE_OWN_DSL} = "y" ] && cp -fdrp ${HOMEDIR}/addon/tmp/W721/squashfs-root/* --target-directory="${SRC}" &&\
