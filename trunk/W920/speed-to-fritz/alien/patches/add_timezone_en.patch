+var g_txtConfirmSubmit = "{?de.system.timeZone.js:5?}";
+function uiDoOnLoad() {
+document.title = "<? print `$var:BoxName` ?>" + " " + "{?de.system.timeZone.js:10TimeZone?}";
+jslSetChecked("uiViewTZ_Enabled", jslGetValue("uiPostTZ_Enabled") == "1");
+jslSetChecked("uiViewTZ_Dst_Enabled", jslGetValue("uiPostTZ_DstEnabled") == "1");
